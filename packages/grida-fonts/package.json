{
  "name": "@grida/fonts",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "tsup index.ts google.ts fontface.ts --format cjs,esm --dts --watch",
    "build": "tsup index.ts google.ts fontface.ts --format cjs,esm --dts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./google": {
      "types": "./dist/google.d.ts",
      "import": "./dist/google.mjs",
      "require": "./dist/google.js"
    },
    "./fontface": {
      "types": "./dist/fontface.d.ts",
      "import": "./dist/fontface.mjs",
      "require": "./dist/fontface.js"
    }
  },
  "devDependencies": {
    "@types/node": "^22.15.28"
  }
}
