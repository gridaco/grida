{
  "name": "@grida/transparency-grid",
  "version": "0.0.0",
  "private": false,
  "description": "Transparency Grid component for Infinite Canvas",
  "keywords": [
    "canvas",
    "checkerboard",
    "design",
    "editor",
    "grid",
    "grida",
    "react",
    "transparency"
  ],
  "homepage": "https://grida.co/packages/@grida/transparency-grid",
  "license": "MIT",
  "author": "softmarshmallow",
  "repository": "https://github.com/gridaco/grida",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.js"
    }
  },
  "scripts": {
    "build": "tsup index.ts react.tsx --format cjs,esm --dts",
    "dev": "tsup index.ts react.tsx --format cjs,esm --dts --watch"
  },
  "dependencies": {
    "color-parse": "^2.0.2"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^19",
    "@webgpu/types": "^0.1.60",
    "react": "^19.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  }
}
